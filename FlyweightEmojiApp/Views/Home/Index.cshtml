@model Models.ReporteViewModel
@{
    ViewBag.Title = "Demo Flyweight con Emojis";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2 class="mb-3">Demo Flyweight con Emojis 😃</h2>

    <div class="row">
        <div class="col-md-8">
            <h4>Mensajes y uso de emojis</h4>
            <div class="list-group">
                @foreach (var uso in Model.UsosDeEmojis)
                {
                    <div class="list-group-item">
                        <span style="font-size: 2em;">@uso.Emoji.Simbolo</span>
                        <span class="text-muted">en posición (@uso.PosicionX, @uso.PosicionY)</span>
                        <span class="badge bg-info">@uso.Contexto</span>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-4">
            <h5>Flyweights Cacheados</h5>
            <ul class="list-group mb-3">
                @foreach (var s in Model.FlyweightsCacheados)
                {
                    <li class="list-group-item" style="font-size:2em;">@s</li>
                }
            </ul>
            <p class="text-success">Total flyweights únicos en memoria: <strong>@Model.TotalFlyweightsEnMemoria</strong></p>
            <h6 class="mt-4">Agregar nuevo emoji:</h6>
            <form asp-action="AgregarEmoji" method="post" class="d-flex">
                <input name="simbolo" class="form-control me-2" placeholder="Ej: 😎" maxlength="2" required />
                <button class="btn btn-primary">Agregar</button>
            </form>
        </div>
    </div>
</div>
